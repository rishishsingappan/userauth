        mc:Ignorable="d"
        Title="main" Height="450" Width="800">
    <Grid>
        <Label Content="welcome" HorizontalAlignment="Center" Margin="0,157,0,0"  FontSize="70" VerticalAlignment="Top" Width="290" Height="89" RenderTransformOrigin="0.5,0.5">
